@model Movies 

<h1>Add Movie to Collection</h1>
<br/>
<form method="post">
    <label asp-for="Category">Category:</label><br>
    <input asp-for="Category" type="text" id="category" name="category" required><br><br>

    <label asp-for="Title">Title:</label><br>
    <input asp-for="Title" type="text" id="title" name="title" required><br><br>

    <label asp-for="Year">Year:</label><br>
    <input asp-for="Year" type="number" id="year" name="year" required><br><br>

    <label asp-for="Director">Director:</label><br>
    <input asp-for="Director" type="text" id="director" name="director" required><br><br>

    <label asp-for="Rating">Rating:</label><br>
    <select asp-for="Rating" id="rating" name="rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br><br>

    <label asp-for="Edited">Edited:</label><br>
    <select asp-for="Edited" id="edited" name="edited" required>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br><br>

    <label asp-for="LentTo">Lent To:</label><br>
    <input asp-for="LentTo" type="text" id="lent_to" name="lent_to"><br><br>

    <label asp-for="Notes">Notes:</label><br>
    <input asp-for="Notes" type="text" id="notes" name="notes" maxlength="25"><br><br>

    <input type="submit" value="Submit">
</form>
